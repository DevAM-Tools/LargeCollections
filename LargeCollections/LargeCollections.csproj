    <Description>Interfaces and types for large collections that can store up to 1_152_921_504_606_846_976
      items like arrays, lists, sets and dictionaries. (Many .NET standard collections are limited
      to about 2.1 billion items)</Description>
    <Title>LargeCollections</Title>
    <Product>LargeCollections</Product>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <PackageId>DevAM.LargeCollections</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <None
      Include="../README.md"
      Pack="true"
      PackagePath="/"
      CopyToOutputDirectory="PreserveNewest">
    </None>
  </ItemGroup>

</Project>